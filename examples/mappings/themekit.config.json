{
  "entry": {
    "default": "./themes/default.theme.json"
  },
  "output": {
    "css": {
      "transforms": ["name/cti/kebab", "name/mapper"],
      "buildPath": "./themes",
      "files": [
        {
          "destination": "[entry]/[platform]/root.css",
          "format": "css/variables",
          "options": {
            "useAliasVariables": true,
            "useComments": true
          }
        }
      ]
    }
  }
}
